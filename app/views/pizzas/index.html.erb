<h1>All of our Pizza's</h1>

<div class="row">
  <% @pizzas.each do |pizza| %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= pizza.image %>">
      <div class="caption">
        <h3><%= pizza.name %></h3>
        <h3>Cost: <%= pizza.cost %></h3>
        <%= link_to "More Info", pizza, class:"btn bth-default" %>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
<%= link_to 'New Pizza', new_pizza_path %>
